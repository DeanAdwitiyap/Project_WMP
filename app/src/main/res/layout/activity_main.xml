<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/watersplash">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/water"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/logo_desc"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Harian: 0 Liter"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/dark_blue">

        <Button
            android:id="@+id/btnSetTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Daily Targets"
            android:textColor="@color/white"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_target"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/dark_blue">

        <Button
            android:id="@+id/btnLogDrink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Drinking Log"
            android:textColor="@color/white"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_water"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/dark_blue">

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View History"
            android:textColor="@color/white"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white" />
    </androidx.cardview.widget.CardView>

</LinearLayout>